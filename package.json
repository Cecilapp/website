{
  "name": "cecil.app",
  "devDependencies": {
    "@netlify/plugin-lighthouse": "^5.0.0",
    "@tailwindcss/forms": "^0.5",
    "@tailwindcss/typography": "^0.5",
    "netlify-plugin-refresh-algolia": "^1.0",
    "postcss": "^8.4",
    "tailwindcss": "^3.3"
  },
  "scripts": {
    "css:build": "npx tailwindcss -i ./assets/tailwind.css -o ./assets/styles.css",
