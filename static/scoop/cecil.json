{
  "description": "A simple and powerful content-driven static site generator.",
  "homepage": "https://cecil.app",
  "license": "MIT",
  "bin": "cecil.phar",
  "notes": [
    "Run 'cecil' to get started",
    "Command 'cecil self-update' is aliased to 'scoop update cecil'"
  ],
  "suggest": {
    "PHP": ["php"]
  },
  "url": "https://cecil.app/download/8.45.7/cecil.phar",
  "version": "8.45.7",
  "hash": "sha1:a9b82bf08be7cc10533cffd10b0577988ca118e0",
  "checkver": {
    "url": "https://cecil.app/VERSION",
    "regex": "([\\d.]+)"
  },
  "autoupdate": {
    "url": "https://cecil.app/download/$version/cecil.phar",
    "hash": {
      "url": "$url.sha1"
    }
  },
  "pre_install": [
    "@(",
    "  'if ($args.length -eq 1 -and ($args -eq \"selfupdate\" -or $args -eq \"self-update\")) { & scoop update cecil }'",
    "  'else { & php (Join-Path $PSScriptRoot \"cecil.phar\") @args }'",
    ") | Add-Content -Path \"$dir\\cecil.phar\""
  ]
}
