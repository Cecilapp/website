{%- macro svg(name, size = 24, class = 'w-12 h-12') -%}
  {%- set octicons = site.data.octicons -%}
  {%- if size in octicons[name].heights|keys -%}
    {%- set path = octicons[name].heights[size].path -%}
  {%- else -%}
    {%- set size = 16 -%}
    {%- set path = octicons['question'].heights[size].path -%}
  {%- endif -%}
  <svg class="{{ class }}" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 {{ size }} {{ size }}" fill="currentColor" aria-hidden="true">{{ path }}</svg>
{%- endmacro -%}