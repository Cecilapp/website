{% extends '_default/list.html.twig' %}

{% block main %}
        {#- content ~#}
        <div class="markdown markdown-a:no-underline markdown-a:hover:no-underline markdown-h2:m-0 markdown-h2:mb-4 max-w-(--breakpoint-md) mx-auto dark:markdown-dark">
          <h1>{% trans %}News{% endtrans %}</h1>
          {%- for news in pages ~%}
          <article class="pt-6 border-slate-200{% if loop.index > 1 %} border-t{% endif %}">
            <div class="mb-1 text-sm text-slate-400 font-medium">{{ news.date|format_date('long') }}</div>
            <a href="{{ url(news) }}"><h2 style="view-transition-name: {{ news.slug|replace({'.': '-'}) }}" id="{{ news.slug|replace({'.': '-'}) }}" class="page-transition">{{ news.title }}</h2></a>
            {%- if loop.index == 1 ~%}
            <div class="mb-6">
              {{ news.content }}
            </div>
            {%- else ~%}
            <div class="mb-6">
              {{ news.description|default('')|markdown_to_html }}
            </div>
            {%- endif ~%}
          </article>
          {%- endfor ~%}
        </div>
{% endblock main %}