{% extends 'page.html.twig' %}

{% block content %}
        <div class="mx-auto">
          <div class="mx-auto max-w-screen-md markdown dark:markdown-dark">
            {% include 'partials/themes-nav.html.twig' %}
            <h1>{{ page.title }}</h1>
            {%- for theme in site.data.themes|filter(t => 'theme-component' in t.topics) ~%}
            <h2>{{ theme.name|split('-')[1]|capitalize }}</h2>
            <p>{{ theme.description }}</p>
            <ul>
              <li><a href="{{ theme.url }}#readme">Documentaton</a></li>
              <li>{{ theme.license }}</li>
            </ul>
            {%- endfor ~%}
          </div>
        </div>
{% endblock %}