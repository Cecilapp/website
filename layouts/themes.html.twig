{% extends 'page.html.twig' %}

{% block content %}
        <div class="mx-auto">
          {#- content ~#}
          <div class="markdown max-w-screen-md mx-auto dark:markdown-dark">
            <h1>{% trans %}Themes{% endtrans %}</h1>
            {% for item in site.data.themes %}
            <h2>{{ item.name }}</h2>
            <p>{{ item.description }}</p>
            {% set screenshot = asset('https://raw.githubusercontent.com/' ~ item.full_name ~ '/' ~ item.default_branch ~ '/docs/screenshot.png', {ignore_missing: true}) %}
            {% if screenshot.size > 0 %}
            <p>
              {{ screenshot|html({alt: item.name}) }}
            </p>
            {% endif %}
            <ul>
              {% if item.homepage %}
              <li>{% trans %}Demo:{% endtrans %} <a href="{{ item.homepage }}">{{ item.homepage }}</a></li>
              {% endif %}
              <li>Documentaton: <a href="{{ item.url }}">{{ item.url }}</a></li>
              <li>{% trans %}License:{% endtrans %} {{ item.license }}</li>
              {#<li>{% trans %}Author:{% endtrans %} {{ item.owner }}</li>#}
            </ul>
            {% endfor %}
            {# page.content #}
          </div>
        </div>
{% endblock %}