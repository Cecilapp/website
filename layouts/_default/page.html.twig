<!DOCTYPE html>
<html lang="{{ site.language }}"
  x-data="{'darkMode': false}"
  x-init="
    darkMode = JSON.parse(localStorage.getItem('darkMode')) || (!('darkMode' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches);
    $watch('darkMode', value => localStorage.setItem('darkMode', JSON.stringify(value)))"
  :class="{'dark': darkMode === true}"
>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {%~ include 'partials/metatags.html.twig' with {'title': title|default('')} ~%}
    <meta name="copyright" content="{{ site.author.name }}" />
    <meta name="google-site-verification" content="{{ site.gsv }}" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700;900&display=swap">
    <link rel="stylesheet" media="print" onload="this.onload=null;this.removeAttribute('media');" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700;900&display=swap">
    <noscript>
      <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700;900&display=swap">
    </noscript>
    {%- if getenv('CECIL_ENV') == 'production' ~%}
    <style>
      {{- asset('styles.css')|inline ~}}
    </style>
    {%- else ~%}
    <link rel="stylesheet" href="{{ asset('styles.css', {minify: false, fingerprint: false}) }}" />
    {%- endif ~%}
    <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/alpinejs/' ~ site.alpinejs.version ~ '/cdn.min.js', {minify: false})|url }}"></script>
  </head>
  <body class="flex flex-col min-h-screen text-darkblue dark:bg-dark dark:text-slate-300">
    <header class="px-6 pt-6 pb-4 bg-blue text-white text-center md:text-left dark:bg-dark">
      <div class="container mx-auto">
        <a href="{{ url(site.home) }}" title="{{ site.title }}" class="text-2xl md:float-left">
          <img src="{{ asset('images/cecil-logo.png') }}" alt="{{ site.title }} logo" class="w-10" width="250" height="250" />
        </a>
        <nav class="mt-3 md:mt-0 pt-3 md:pt-0 border-t md:border-t-0 border-bluegray space-x-4 md:space-x-6 md:float-right">
          {%- for entry in site.menus.main|sort_by_weight ~%}
          <a class="hover:text-white" id="menu-entry-{{ entry.id }}" class="{% if url(page) == url(entry.url) or url(page) == url(entry.url)|trim('/') or page.section == entry.url %} active{% endif %}" href="{{ url(entry.url) }}">
            {%- if entry.id == 'documentation' ~%}
            <span class="hidden sm:inline-block">{{ entry.name }}</span>
            <span class="sm:hidden">{% trans %}Docs{% endtrans %}</span>
            {%- else ~%}
            {{ entry.name }}
            {%- endif ~%}
          </a>
          {%- endfor ~%}
          {#-{% include 'partials/flags.html.twig' %}~#}
          <a href="https://twitter.com/{{ site.social.twitter.site }}" aria-label="{{ site.title }} on Twitter">
            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" focusable="false" width="1.2em" height="1.2em" style="-ms-transform: rotate(360deg); -webkit-transform: rotate(360deg); transform: rotate(360deg);" preserveaspectratio="xMidYMid meet" viewbox="0 0 24 24"><path d="M22.46 6c-.77.35-1.6.58-2.46.69c.88-.53 1.56-1.37 1.88-2.38c-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29c0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15c0 1.49.75 2.81 1.91 3.56c-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07a4.28 4.28 0 0 0 4 2.98a8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21C16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56c.84-.6 1.56-1.36 2.14-2.23z" fill="#F2D07F"/></svg>
          </a>
          <a class="github-button" href="{{ site.social.github.repo }}" data-show-count="true" aria-label="Star {{ site.title }} on GitHub">{% trans %}Star{% endtrans %}</a>
        </nav>
      </div>
    </header>
    {%~ block jumbotron %}{% endblock ~%}
    <main class="flex-grow px-6 py-8">
      <div class="container mx-auto">
        {%~ block content ~%}
        {#- content ~#}
        <div class="markdown max-w-screen-md mx-auto dark:markdown-dark">
          {{ page.content }}
        </div>
        {%- endblock ~%}
      </div>
    </main>
    <footer class="px-6 py-6 leading-6 text-xs text-left text-slate-500 dark:text-slate-300 font-light border-t border-slate-200 dark:bg-black">
      <div class="container mx-auto">
        {% if site.menus.footer.about is defined %}<a href="{{ url(site.menus.footer.about.url) }}">{% trans "About" %}</a> &middot; {% endif %}<a href="{{ url(site.menus.footer.github.url) }}">{% trans "Open source" %}</a>{% if page.translations|length >= 1 %} &middot; {% include 'partials/languages.html.twig' %}{% endif -%}<br />
        {%- set logo_by = '<a href="https://www.cecillie.fr">Cécile Ricordeau</a>' ~%}
        © 2013-{{ 'now'|date('Y') }} <a href="{{ site.author.url }}">{{ site.author.name }}</a> &middot; {% trans %}Logo by {{ logo_by }}{% endtrans %}<br />
        {%- set powered_by -%}
        <a href="{{ cecil.url }}">Cecil</a>, <a href="https://tailwindcss.com">Tailwind</a>, <a href="https://primer.style/octicons/">Octicons</a>, <a href="https://github.com">GitHub</a>, <a href="https://forestry.io">Forestry.io</a>, <a href="https://www.netlify.com">Netlify</a>
        {%- endset ~%}
        {% trans %}Powered by {{ powered_by }}{% endtrans ~%}
        {%~ include 'partials/toggle-switch-dark.html.twig' ~%}
      </div>
    </footer>
    {%- block footer_scripts ~%}
    <script async defer src="{{ asset('https://buttons.github.io/buttons.js') }}"></script>
    {%~ include 'partials/googleanalytics.js.twig' -%}
    {%~ include 'partials/anchor.js.twig' only -%}
    {%~ endblock footer_scripts ~%}
    <style>{% apply minify_css %}
      {% block footer_css %}
      /* Fix highlight.js with Typography */
      .hljs {
        padding: 0;
        background: transparent;
      }
      {% endblock footer_css %}
    {% endapply %}</style>
  </body>
</html>