{% extends '_default/list.html.twig' %}

{% block main %}
        {#- content ~#}
        <div class="markdown max-w-(--breakpoint-md) mx-auto dark:markdown-dark markdown-headings:pt-3 markdown-headings:mt-0 markdown-h1:pt-0">
          <h1>{{ page.title }}</h1>
          <p>{{ page.content }}</p>
          {%- for p in pages ~%}
          {#-<article class="border-slate-300{% if loop.index > 1 %} border-t{% endif %}">~#}
          <article>
            {#-<div class="text-sm text-slate-400 font-medium mt-6">{{ p.date|format_date('long') }}</div>~#}
            <h2><a href="{{ url(p) }}">{{ p.title }}</a></h2>
            <div class="mb-6">
              {{ p.description|default|markdown_to_html }}
            </div>
          </article>
          {%- endfor ~%}
          {{- include('partials/paginator.html.twig') ~}}
        </div>
{% endblock %}