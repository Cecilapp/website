{% extends 'themes/list.html.twig' %}

{% set repos = site.data.starters %}

            {%- block nav %}{% endblock ~%}

            {%- block name ~%}
            <h2>{{ repo.name }}</h2>
            {%- endblock ~%}

            {%- block command ~%}
            <h3>Create project</h3>
            {%- import 'macros/octicons.twig' as octicons ~%}
            <div class="copy-link">
              <input id="{{ repo.name|lower }}" type="text" class="copy-link-input" value="composer create-project cecil/{{ repo.name|lower }} --ask" readonly>
              <button type="button" class="copy-link-button" aria-label="{% trans %}Copy to clipboard{% endtrans %}">
                {{ octicons.svg('copy', 16) }}
              </button>
            </div>
            {%- endblock ~%}

            {%- block button_website ~%}
              {%- if repo.homepage ~%}
                {%- x:button with {href: repo.homepage, class: 'btn-sm', role: 'button'} ~%}
                  {% trans %}Homepage{% endtrans %}
                {%- endx ~%}
              {%- endif ~%}
            {%- endblock ~%}