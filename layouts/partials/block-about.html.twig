{# Variables: icon; title, description #}
{% import 'macros/octicon.twig' as octicon %}
            <div class="flex">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-12 w-12 text-blue dark:text-gray-300">
                  {{- octicon.svg(icon) ~}}
                </div>
              </div>
              <dl class="ml-4">
                <dt class="text-lg leading-6 font-medium">
                  {{ title }}
                </dt>
                <dd class="mt-2 text-sm">
                  {{ description|markdown_to_html }}
                </dd>
              </dl>
            </div>