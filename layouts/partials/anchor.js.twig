    {#- AnchorJS ~#}
    <script defer src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/anchor-js/%s/anchor.min.js'|format(site.libs.anchor.version), {minify: false}) }}"></script>
    <script>{% apply minify_js ~%}
      document.addEventListener('DOMContentLoaded', () => {
        anchors.options = {
          visible: 'always',
          icon: '#',
          placement: 'left'
        };
        anchors.add('.markdown > h2');
        var subAnchors = new AnchorJS({
          icon: '#',
          placement: 'left'
        });
        subAnchors.add('.markdown > h3, .markdown > h4, .markdown > h5');
      });
    {% endapply %}</script>