    {%- import 'macros/octicons.twig' as octicons -%}
    {#- back to top button ~#}
    {%- block backtotop ~%}
    <div id="button-top" class="fixed bottom-0 right-0 mb-4 mr-4 z-10 opacity-0 duration-150 ease-in-out">
      <a href="#top" class="flex size-10 items-center justify-center bg-blue dark:bg-dark text-slate-300 hover:text-slate-50 rounded-full shadow-md" aria-label="{% trans %}Back to top{% endtrans %}" title="{% trans %}Back to top{% endtrans %}">
        {{- octicons.svg('arrow-up', 24, 'size-7') -}}
      </a>
    </div>
    {%- endblock ~%}
    <script>{% apply minify_js ~%}
      window.addEventListener('scroll', function (e) {
        document.getElementById('button-top').classList.add('opacity-0');
        if (window.scrollY > 300) {
          document.getElementById('button-top').classList.remove('opacity-0');
        }
      });
    {% endapply %}</script>